{
  "name": "signal-web",
  "version": "1.0.0",
  "private": true,
  "description": "E2E encrypted chat using Signal Protocol",
  "scripts": {
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "node esbuild.config.js",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server/index.js",
    "dev": "concurrently \"tsc -p tsconfig.server.json --watch --preserveWatchOutput\" \"node esbuild.config.js --watch\" \"node --watch dist/server/index.js\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint server/ client/src/ shared/ tests/",
    "lint:security": "eslint --max-warnings=0 server/ client/src/ shared/ tests/",
    "typecheck": "tsc -p tsconfig.server.json --noEmit && tsc -p tsconfig.client.json --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@privacyresearch/libsignal-protocol-typescript": "^0.0.12",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.7.0",
    "compression": "^1.8.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.3.1",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@types/qrcode": "^1.5.6",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.1.2",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-plugin-no-secrets": "^2.2.2",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings=0"
    ]
  }
}
